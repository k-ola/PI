<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/poiDesc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="visible"
    app:layout_anchorGravity="end"
    tools:context=".activities.SinglePoiActivity"
    tools:ignore="DuplicateIds"
    android:background="@drawable/tlo1b">




    <TextView
        android:id="@+id/namePoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Poi name"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/latPoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="lat"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namePoi" />

    <TextView
        android:id="@+id/lngPoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="lng"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintStart_toEndOf="@+id/latPoi"
        app:layout_constraintTop_toBottomOf="@+id/namePoi" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lngPoi"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/relLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="20dp"
            >


            <ImageView
                android:id="@+id/imgPoi"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                />
          <!--   android:scaleType="fitStart"
                tools:srcCompat="@tools:sample/backgrounds/scenic"

                />  -->


            <TextView
                android:id="@+id/Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="130dp"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/white"
                android:paddingBottom="50dp"
                />
       <!--         android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_below="@id/imgPoi"
                android:layout_marginTop="20dp"

                android:textColor="@color/black"  />-->
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>